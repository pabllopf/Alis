<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
    <Import Project="$(SolutionDir).config/Config.props"/>

    <PropertyGroup>
        <TargetFrameworks>$(TargetFramework1);$(TargetFramework2)</TargetFrameworks>
    </PropertyGroup>

    <PropertyGroup>
        <OutDir>bin/$(Configuration)/$(RuntimeIdentifier)/lib/$(TargetFramework)/</OutDir>
        <PublishTrimmed>false</PublishTrimmed>
        <PublishReadyToRun>false</PublishReadyToRun>
        <PublishSingleFile>false</PublishSingleFile>
        <PublishReadyToRunShowWarnings>false</PublishReadyToRunShowWarnings>
        <IsTrimmable>false</IsTrimmable>
    </PropertyGroup>

    <ItemGroup>
        <None Update="Assets\AudioSample.wav">
            <LinkBase>Assets/</LinkBase>
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
            <CopyToPublishDirectory>Always</CopyToPublishDirectory>
        </None>
        <None Update="Assets\tile000.bmp">
            <LinkBase>Assets/</LinkBase>
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
            <CopyToPublishDirectory>Always</CopyToPublishDirectory>
        </None>
    </ItemGroup>
</Project>