<Project>

    <PropertyGroup Label="BasePath">
        <SolutionDir Condition="'$(SolutionDir)'==''">$(MSBuildThisFileDirectory)</SolutionDir>
    </PropertyGroup>
    
    <PropertyGroup>
        <AccelerateBuildsInVisualStudio>true</AccelerateBuildsInVisualStudio>
        <ProduceReferenceAssembly>true</ProduceReferenceAssembly>
        <Deterministic>true</Deterministic>
        <Optimize>true</Optimize>
        <BuildInParallel>true</BuildInParallel>
        <UseSharedCompilation>true</UseSharedCompilation>
        <RunAnalyzersDuringBuild>false</RunAnalyzersDuringBuild>
    </PropertyGroup>

    <PropertyGroup>
        <VSTestLogger>trx%3bLogFileName=$(MSBuildProjectName).trx</VSTestLogger>
        <VSTestResultsDirectory>$(SolutionDir).test/$(TargetFramework)</VSTestResultsDirectory>
    </PropertyGroup>

    <PropertyGroup>
        <AssemblyVersion>0.8.7</AssemblyVersion>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)'=='Debug'">
        <EnableNETAnalyzers>false</EnableNETAnalyzers>
        <EnableRegexSourceGeneration>false</EnableRegexSourceGeneration>
        <EnableJsonSourceGeneration>false</EnableJsonSourceGeneration>
    </PropertyGroup>
</Project>