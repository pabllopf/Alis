<Project Sdk="Microsoft.NET.Sdk">

  
  <!-- _________________________ GENERAL CONFIG ___________________________________-->
  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <Configurations>Windows;Debug;Release;MacOS;Linux</Configurations>
    <RuntimeIdentifiers>win;win-x86;win-x64;win10-x64;win10-x86;osx.10.11-x64;osx;osx.10.12-x64;debian.8-x64;debian.10-x64;ubuntu.16.04-x64</RuntimeIdentifiers>
    <AssemblyName>Alis.Core.Sfml</AssemblyName>
	<LangVersion>9.0</LangVersion>
	<Nullable>enable</Nullable>
	<PackageId>Alis.Core-SFML</PackageId>
	<Authors>Pablo Perdomo Falcón</Authors>
	<Product>Alis</Product>
	<Description>The "Alis.Core-SFML" include the implementation of library "SFML.NET 2.5" with fully configured to import and use in your project. And remember ... it's multiplatform and free!!
</Description>
	<Copyright>GNU General Public License v3.0</Copyright>
	<PackageLicenseFile>licence</PackageLicenseFile>

	<PackageProjectUrl>https://pabllopf.github.io/Alis/</PackageProjectUrl>
	<PackageIcon>logo.png</PackageIcon>
	
	<PackageTags>SFML Alis Multi-Platform Framework VideoGame Games Windows Linux MacOs Android IOS Free</PackageTags>
	<PackageReleaseNotes>Includes new package configuration for nuget center.</PackageReleaseNotes>
	<NeutralLanguage>en</NeutralLanguage>
	<PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
	<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
	<SignAssembly>false</SignAssembly>
	<AssemblyOriginatorKeyFile>Pablo Perdomo Falcón.pfx</AssemblyOriginatorKeyFile>
    <AssemblyVersion>1.3.6.0</AssemblyVersion>
    <FileVersion>1.3.6.0</FileVersion>
    <Version>1.3.6</Version>
    <ApplicationIcon>logo.ico</ApplicationIcon>
    <RepositoryUrl>https://github.com/pabllopf/Alis</RepositoryUrl>
    <RepositoryType>public</RepositoryType>
    <IncludeSymbols>true</IncludeSymbols>
    <Platforms>AnyCPU;x64</Platforms>
    <PackageIconUrl />
    <AppDesignerFolder>properties</AppDesignerFolder>
  </PropertyGroup>

  <!-- _____________________________ WINDOWS_____________________________________ -->
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Windows|AnyCPU'">
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <RepositoryUrl>https://github.com/pabllopf/Alis/</RepositoryUrl>
    <RepositoryType>Public</RepositoryType>
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
    <DocumentationFile>Core.xml</DocumentationFile>
    <DefineConstants>Windows</DefineConstants>
    <Optimize>true</Optimize>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Windows|x64'">
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <RepositoryUrl>https://github.com/pabllopf/Alis/</RepositoryUrl>
    <RepositoryType>Public</RepositoryType>
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
    <DocumentationFile>Core.xml</DocumentationFile>
    <DefineConstants>Windows</DefineConstants>
    <Optimize>true</Optimize>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <DefineConstants>Windows</DefineConstants>
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
    <DocumentationFile>Core.xml</DocumentationFile>
    <DefineConstants>TRACE;DEBUG;Windows; </DefineConstants>
    <Optimize>true</Optimize>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|x64'">
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <DefineConstants>Windows</DefineConstants>
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
    <DocumentationFile>Core.xml</DocumentationFile>
    <DefineConstants>TRACE;DEBUG;Windows; </DefineConstants>
    <Optimize>true</Optimize>
  </PropertyGroup>

	<!-- _____________________________ Release _____________________________________ -->
    <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
	    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
	    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
	    <DefineConstants>TRACE;DEBUG;Windows</DefineConstants>
    </PropertyGroup>
    <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|x64'">
      <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
      <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
      <DefineConstants>TRACE;DEBUG;Windows</DefineConstants>
    </PropertyGroup>


  <!-- ______________________________ MACOS _____________________________________ -->
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'MacOS|AnyCPU' ">
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <DefineConstants>Macos</DefineConstants>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='MacOS|x64'">
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <DefineConstants>Macos</DefineConstants>
  </PropertyGroup>

  
  <!-- ______________________________ LINUX _____________________________________ -->
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Linux|AnyCPU'">
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <DebugType />
    <Optimize>true</Optimize>
    <DefineConstants>Linux;</DefineConstants>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Linux|x64'">
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <DebugType />
    <Optimize>true</Optimize>
    <DefineConstants>Linux;</DefineConstants>
  </PropertyGroup>
  <ItemGroup>
    <Compile Remove="src\Input\**" />
    <Compile Remove="src\Render\**" />
    <EmbeddedResource Remove="src\Input\**" />
    <EmbeddedResource Remove="src\Render\**" />
    <None Remove="src\Input\**" />
    <None Remove="src\Render\**" />
    <None Include="docs\licence">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
    <None Include="docs\logo.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>


  
  <ItemGroup>
    <None Update="runtimes/**" CopyToOutputDirectory="Always" CopyToPublishDirectory="Always" />
  </ItemGroup>


  
  <ItemGroup>
    <PackageReference Include="SFML.Audio" Version="2.5.0" />
    <PackageReference Include="SFML.Graphics" Version="2.5.0" />
    <PackageReference Include="SFML.Net" Version="2.5.0" />
    <PackageReference Include="SFML.System" Version="2.5.0" />
    <PackageReference Include="SFML.Window" Version="2.5.0" />
  </ItemGroup>


  
  <ItemGroup>
    <ProjectReference Include="..\..\..\3_domain\core\alis.core\Alis.Core.csproj" />
  </ItemGroup>


  
  <ItemGroup>
    <Compile Update="properties\Resources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Resources.resx</DependentUpon>
    </Compile>
  </ItemGroup>


  
  <ItemGroup>
    <EmbeddedResource Update="properties\Resources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Resources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>


  

     
    

 
  

</Project>
