    </PropertyGroup>

    <PropertyGroup Condition="'$(Configurations)' == 'linux' and '$(Platforms)' == 'ARM64'">
        <RuntimeIdentifier>linux-arm64</RuntimeIdentifier>
        <DefineConstants>linux</DefineConstants>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configurations)' == 'linux' and '$(Platforms)' == 'ARM'">
        <RuntimeIdentifier>linux-arm</RuntimeIdentifier>
        <DefineConstants>linux</DefineConstants>
    </PropertyGroup>

    <!-- IOS CONFIG -->
    <PropertyGroup Condition="'$(Configurations)' == 'ios'">
        <RuntimeIdentifiers>ios-arm64;ios-arm</RuntimeIdentifiers>
        <DefineConstants>ios</DefineConstants>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configurations)' == 'ios' and '$(Platforms)' == 'ARM64'">
