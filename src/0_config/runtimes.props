    <PropertyGroup Condition="'$(Configurations)' == 'ios' and '$(Platforms)' == 'ARM'">
        <RuntimeIdentifier>ios-arm</RuntimeIdentifier>
        <DefineConstants>ios</DefineConstants>
    </PropertyGroup>

    <!-- ANDROID CONFIG -->
    <PropertyGroup Condition="'$(Configurations)' == 'android'">
        <RuntimeIdentifiers>android-arm64;android-arm</RuntimeIdentifiers>
        <DefineConstants>android</DefineConstants>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configurations)' == 'android' and '$(Platforms)' == 'ARM64'">
        <RuntimeIdentifier>android-arm64</RuntimeIdentifier>
        <DefineConstants>android</DefineConstants>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configurations)' == 'android' and '$(Platforms)' == 'ARM'">
        <RuntimeIdentifier>android-arm</RuntimeIdentifier>
        <DefineConstants>android</DefineConstants>
    </PropertyGroup>

</Project>