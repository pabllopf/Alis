<Project>
    <!-- RUNTIMES CONFIG -->
    <!-- WINDOWS CONFIG -->
    <PropertyGroup Condition="'$(Configurations)' == 'win'">
        <RuntimeIdentifiers>win-x64;win-x86;win-arm;win-arm64;</RuntimeIdentifiers>
        <DefineConstants>win</DefineConstants>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configurations)' == 'win' and '$(Platforms)' == 'x64'">
        <RuntimeIdentifier>win-x64</RuntimeIdentifier>
        <DefineConstants>win</DefineConstants>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configurations)' == 'win' and '$(Platforms)' == 'x86'">
        <RuntimeIdentifier>win-x86</RuntimeIdentifier>
        <DefineConstants>win</DefineConstants>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configurations)' == 'win' and '$(Platforms)' == 'ARM64'">
        <RuntimeIdentifier>win-arm64</RuntimeIdentifier>
        <DefineConstants>win</DefineConstants>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configurations)' == 'win' and '$(Platforms)' == 'ARM'">
        <RuntimeIdentifier>win-arm</RuntimeIdentifier>
        <DefineConstants>win</DefineConstants>
    </PropertyGroup>

    <!-- MACOS CONFIG -->
    <PropertyGroup Condition="'$(Configurations)' == 'osx'">
        <RuntimeIdentifiers>osx-x64;osx-ARM64</RuntimeIdentifiers>
        <DefineConstants>osx</DefineConstants>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configurations)' == 'osx' and '$(Platforms)' == 'x64'">
        <RuntimeIdentifier>osx-x64</RuntimeIdentifier>
        <DefineConstants>osx</DefineConstants>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configurations)' == 'osx' and '$(Platforms)' == 'ARM64'">
        <RuntimeIdentifier>osx-ARM64</RuntimeIdentifier>
        <DefineConstants>osx</DefineConstants>
    </PropertyGroup>

    <!-- LINUX CONFIG -->
    <PropertyGroup Condition="'$(Configurations)' == 'linux'">
        <RuntimeIdentifiers>linux-arm64;linux-arm64;linux-arm</RuntimeIdentifiers>
        <DefineConstants>linux</DefineConstants>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configurations)' == 'linux' and '$(Platforms)' == 'x64'">
