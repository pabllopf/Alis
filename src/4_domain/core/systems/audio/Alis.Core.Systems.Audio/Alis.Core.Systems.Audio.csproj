<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <Configurations>Debug;Release</Configurations>
        <RuntimeIdentifier>win-x64</RuntimeIdentifier>
        <RuntimeIdentifiers>win10-x64;win10-x86;linux-x64;osx-x64</RuntimeIdentifiers>
        <LangVersion>9</LangVersion>
        <Nullable>enable</Nullable>
        <Platforms>AnyCPU;x64;x32;x86;ARM64</Platforms>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="CommandLineParser" Version="2.8.0" />
        <PackageReference Include="Vortice.MediaFoundation" Version="2.1.0" />
        <PackageReference Include="Vortice.XAudio2" Version="2.1.0" />
        <PackageReference Include="NLayer.Core" Version="1.15.0" />
        <PackageReference Include="NVorbis" Version="0.10.4" />
        <PackageReference Include="System.Memory" Version="4.5.4" />
        <PackageReference Include="FFmpeg.AutoGen" Version="4.4.1" />
        <PackageReference Include="NativeLibraryLoader" Version="1.0.12" />
    </ItemGroup>

    <ItemGroup>
        <Content Condition="'$(RuntimeIdentifier)' == 'linux-x64'" Include="runtimes/linux-x64/native/libopenal.so">
            <Link>%(Filename)%(Extension)</Link>
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
            <Visible>True</Visible>
        </Content>

        <Content Condition="'$(RuntimeIdentifier)' == 'win-x64'" Include="runtimes/win-x64/native/libopenal.dll">
            <Link>%(Filename)%(Extension)</Link>
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
            <Visible>True</Visible>
        </Content>

        <Content Condition="'$(RuntimeIdentifier)' == 'win-x32'" Include="runtimes/win-x32/native/libopenal.dll">
            <Link>%(Filename)%(Extension)</Link>
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
            <Visible>True</Visible>
        </Content>

        <Content Condition="'$(RuntimeIdentifier)' == 'osx-x64'" Include="runtimes/osx-x64/native/libopenal.dylib">
            <Link>%(Filename)%(Extension)</Link>
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
            <Visible>True</Visible>
        </Content>
        
    </ItemGroup>

</Project>
