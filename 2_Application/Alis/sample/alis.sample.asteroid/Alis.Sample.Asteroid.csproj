      <None Update="Assets\Logo\app.bmp">
        <LinkBase>Assets/</LinkBase>
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        <CopyToPublishDirectory>Always</CopyToPublishDirectory>
      </None>
    </ItemGroup>
</Project>