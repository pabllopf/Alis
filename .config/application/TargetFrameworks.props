<Project>
    <PropertyGroup Condition="$(AssemblyName.Contains('Test')) == true">
        <TargetFrameworkSelected>net6.0</TargetFrameworkSelected>
    </PropertyGroup>

    <PropertyGroup Condition="$(AssemblyName.Contains('Sample')) == true">
        <TargetFrameworkSelected>net6.0</TargetFrameworkSelected>
    </PropertyGroup>

    <PropertyGroup Condition="$(AssemblyName.Contains('Test')) == false AND $(AssemblyName.Contains('Sample')) == false">
        <TargetFrameworkSelected>netstandard2.0</TargetFrameworkSelected>
    </PropertyGroup>
</Project>