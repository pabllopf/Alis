<Project>
    <ItemGroup Condition="Exists('$(ProjectDir)Assets/') == True">
        <None
            Update="$(ProjectDir)Assets/**"
            LinkBase="Assets"
            CopyToOutputDirectory="Always"
            CopyToPublishDirectory="Always"/>
    </ItemGroup>

    <ItemGroup Condition="Exists('$(ProjectDir)Data/') == True">
        <None
            Update="$(ProjectDir)Data/**"
            LinkBase="Data"
            CopyToOutputDirectory="Always"
            CopyToPublishDirectory="Always"/>
    </ItemGroup>
</Project>