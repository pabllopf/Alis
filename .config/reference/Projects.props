<?xml version="1.0" encoding="utf-8"?>
<Project>

    <ItemGroup Condition="
        $(AssemblyName.Contains('Test')) == False AND
        $(AssemblyName.Contains('App.Installer')) == False AND 
        $(AssemblyName.Contains('Sample')) == False AND
        $(AssemblyName.Contains('Template')) == False AND 
        $(AssemblyName.Contains('Benchmark')) == False AND 
        $(Configuration) == 'Debug'">

        <ProjectReference Condition="$(ProjectDir.Contains('1_Presentation'))"
                          Include="$(SolutionDir)2_Application/**/Alis.csproj"/>

        <ProjectReference Condition="$(ProjectDir.Contains('2_Application'))"
                          Include="$(SolutionDir)3_Structuration/**/*.csproj"
                          Exclude="$(SolutionDir)3_Structuration/**/*.Sample.csproj; $(SolutionDir)3_Structuration/**/*.Test.csproj;"/>

        <ProjectReference Condition="$(ProjectDir.Contains('3_Structuration'))"
                          Include="$(SolutionDir)4_Operation/**/*.csproj"
                          Exclude="$(SolutionDir)4_Operation/**/*.Sample.csproj; $(SolutionDir)4_Operation/**/*.Test.csproj;"/>

        <ProjectReference Condition="$(ProjectDir.Contains('4_Operation'))"
                          Include="$(SolutionDir)5_Declaration/**/*.csproj"
                          Exclude="$(SolutionDir)5_Declaration/**/*.Sample.csproj; $(SolutionDir)5_Declaration/**/*.Test.csproj;"/>

        <ProjectReference Condition="$(ProjectDir.Contains('5_Declaration'))"
                          Include="$(SolutionDir)6_Ideation/**/*.csproj"
                          Exclude="$(SolutionDir)6_Ideation/**/*.Sample.csproj; $(SolutionDir)6_Ideation/**/*.Test.csproj;"/>

        <InternalsVisibleTo Include="$(AssemblyName).Test"/>

        <EmbeddedResource Condition="$(IsARM) != true" Remove="$(ProjectDir)/**/Properties/**/*ARM.resx"/>
        <Compile Condition="$(IsARM) != true" Remove="$(ProjectDir)/**/Properties/**/*ARM.Designer.cs"/>
        
        <EmbeddedResource Condition="$(IsARM64) != true" Remove="$(ProjectDir)/**/Properties/**/*ARM64.resx"/>
        <Compile Condition="$(IsARM64) != true" Remove="$(ProjectDir)/**/Properties/**/*ARM64.Designer.cs"/>

        <EmbeddedResource Condition="$(IsX64) != true" Remove="$(ProjectDir)/**/Properties/**/*X64.resx"/>
        <Compile Condition="$(IsX64) != true" Remove="$(ProjectDir)/**/Properties/**/*X64.Designer.cs"/>

        <EmbeddedResource Condition="$(IsX86) != true" Remove="$(ProjectDir)/**/Properties/**/*X86.resx"/>
        <Compile Condition="$(IsX86) != true" Remove="$(ProjectDir)/**/Properties/**/*X86.Designer.cs"/>

        <EmbeddedResource Condition="$(IsOSX) != true" Remove="$(ProjectDir)/**/Properties/**/*Osx*.resx"/>
        <Compile Condition="$(IsOSX) != true" Remove="$(ProjectDir)/**/Properties/**/*Osx*.Designer.cs"/>

        <EmbeddedResource Condition="$(IsWindows) != true" Remove="$(ProjectDir)/**/Properties/**/*Windows*.resx"/>
        <Compile Condition="$(IsWindows) != true" Remove="$(ProjectDir)/**/Properties/**/*Windows*.Designer.cs"/>

        <EmbeddedResource Condition="$(IsLinux) != true" Remove="$(ProjectDir)/**/Properties/**/*Linux*.resx"/>
        <Compile Condition="$(IsLinux) != true" Remove="$(ProjectDir)/**/Properties/**/*Linux*.Designer.cs"/>

    </ItemGroup>


    <ItemGroup Condition="
        $(AssemblyName.Contains('Test')) == False AND
        $(AssemblyName.Contains('App.Installer')) == False AND 
        $(AssemblyName.Contains('Sample')) == False AND
        $(AssemblyName.Contains('Template')) == False AND 
        $(AssemblyName.Contains('Benchmark')) == False AND 
        $(Configuration) == 'Release'">

        <ProjectReference Condition="$(ProjectDir.Contains('1_Presentation'))"
                          Include="$(SolutionDir)2_Application/**/Alis.csproj"/>

        <Compile Condition="$(ProjectDir.Contains('2_Application'))"
                 Include="
                        
                        $(SolutionDir)3_Structuration/**/*.cs;
                        "
                 Exclude="
                          $(SolutionDir)3_Structuration/**/obj/**/*.cs;
                          $(SolutionDir)3_Structuration/**/bin/**/*.cs;
                          $(SolutionDir)3_Structuration/**/*sample/**/*.cs;
                          $(SolutionDir)3_Structuration/**/*test/**/*.cs;  
                          $(SolutionDir)3_Structuration/**/*.Designer.cs"
                 Link="$([System.String]::Copy('%(RecursiveDir)').Replace('src',''))%(Filename)%(Extension)"/>

        <Compile Condition="$(ProjectDir.Contains('2_Application'))"
                 Include="
                        
                        $(SolutionDir)4_Operation/**/*.cs;
                        "
                 Exclude="
                          $(SolutionDir)4_Operation/**/obj/**/*.cs;
                          $(SolutionDir)4_Operation/**/bin/**/*.cs;
                          $(SolutionDir)4_Operation/**/*sample/**/*.cs;
                          $(SolutionDir)4_Operation/**/*test/**/*.cs; 
                          $(SolutionDir)4_Operation/**/*.Designer.cs "
                 Link="Core/$([System.String]::Copy('%(RecursiveDir)').Replace('src',''))%(Filename)%(Extension)"/>

        <Compile Condition="$(ProjectDir.Contains('2_Application'))"
                 Include="
                        
                        $(SolutionDir)5_Declaration/**/*.cs;
                        "
                 Exclude="
                          $(SolutionDir)5_Declaration/**/obj/**/*.cs;
                          $(SolutionDir)5_Declaration/**/bin/**/*.cs;
                          $(SolutionDir)5_Declaration/**/*sample/**/*.cs;
                          $(SolutionDir)5_Declaration/**/*test/**/*.cs; 
                          $(SolutionDir)5_Declaration/**/*.Designer.cs"
                 Link="Core/$([System.String]::Copy('%(RecursiveDir)').Replace('src',''))%(Filename)%(Extension)"/>

        <Compile Condition="$(ProjectDir.Contains('2_Application'))"
                 Include="
                            
                            $(SolutionDir)6_Ideation/**/*.cs;
                            "
                 Exclude="
                          $(SolutionDir)6_Ideation/**/obj/**/*.cs;
                          $(SolutionDir)6_Ideation/**/bin/**/*.cs;
                          $(SolutionDir)6_Ideation/**/*sample/**/*.cs;
                          $(SolutionDir)6_Ideation/**/*test/**/*.cs;  
                          $(SolutionDir)6_Ideation/**/*.Designer.cs"
                 Link="Core/Aspect/$([System.String]::Copy('%(RecursiveDir)').Replace('src',''))%(Filename)%(Extension)"/>


        <EmbeddedResource Condition="$(ProjectDir.Contains('2_Application'))"
                          Include="$(SolutionDir)4_Operation/**/*.resx"
                          Link="Core/$([System.String]::Copy('%(RecursiveDir)').Replace('src',''))%(Filename)%(Extension)">
            <Generator>ResXFileCodeGenerator</Generator>
            <LastGenOutput>$([System.String]::Copy('%(RecursiveDir)').Replace('src',''))%(Filename).Designer.cs</LastGenOutput>
        </EmbeddedResource>

        <Compile
            Condition="$(ProjectDir.Contains('2_Application'))"
            Include="$(SolutionDir)4_Operation/**/*.Designer.cs"
            Link="Core/$([System.String]::Copy('%(RecursiveDir)').Replace('src',''))%(Filename)%(Extension)">
            <DesignTime>True</DesignTime>
            <AutoGen>True</AutoGen>
            <DependentUpon>$([System.String]::Copy('%(RecursiveDir)').Replace('src',''))%(Filename).resx</DependentUpon>
        </Compile>


        <Compile Condition="$(ProjectDir.Contains('3_Structuration'))"
                 Include="
                        $(SolutionDir)4_Operation/**/*.cs;
                        "
                 Exclude="
                          $(SolutionDir)4_Operation/**/obj/**/*.cs;
                          $(SolutionDir)4_Operation/**/bin/**/*.cs;
                          $(SolutionDir)4_Operation/**/*sample/**/*.cs;
                          $(SolutionDir)4_Operation/**/*test/**/*.cs; 
                          $(SolutionDir)4_Operation/**/*.Designer.cs"
                 Link="$([System.String]::Copy('%(RecursiveDir)').Replace('src',''))%(Filename)%(Extension)"/>

        <EmbeddedResource Condition="$(ProjectDir.Contains('3_Structuration'))"
                          Include="$(SolutionDir)4_Operation/**/*.resx"
                          Link="$([System.String]::Copy('%(RecursiveDir)').Replace('src',''))%(Filename)%(Extension)">
            <Generator>ResXFileCodeGenerator</Generator>
            <LastGenOutput>$([System.String]::Copy('%(RecursiveDir)').Replace('src',''))%(Filename).Designer.cs</LastGenOutput>
        </EmbeddedResource>

        <Compile
            Condition="$(ProjectDir.Contains('3_Structuration'))"
            Include="$(SolutionDir)4_Operation/**/*.Designer.cs"
            Link="$([System.String]::Copy('%(RecursiveDir)').Replace('src',''))%(Filename)%(Extension)">
            <DesignTime>True</DesignTime>
            <AutoGen>True</AutoGen>
            <DependentUpon>$([System.String]::Copy('%(RecursiveDir)').Replace('src',''))%(Filename).resx</DependentUpon>
        </Compile>

        <Compile Condition="$(ProjectDir.Contains('3_Structuration')) OR $(ProjectDir.Contains('4_Operation'))"
                 Include="
                        
                        $(SolutionDir)5_Declaration/**/*.resx"
                 Exclude="
                          $(SolutionDir)5_Declaration/**/obj/**/*.cs;
                          $(SolutionDir)5_Declaration/**/bin/**/*.cs;
                          $(SolutionDir)5_Declaration/**/*sample/**/*.cs;
                          $(SolutionDir)5_Declaration/**/*test/**/*.cs; $(SolutionDir)5_Declaration/**/Resources.Designer.cs"
                 Link="$([System.String]::Copy('%(RecursiveDir)').Replace('src',''))%(Filename)%(Extension)"/>

        <Compile Condition="$(ProjectDir.Contains('3_Structuration')) OR $(ProjectDir.Contains('4_Operation'))"
                 Include="
                        $(SolutionDir)6_Ideation/**/*.cs;"
                 Exclude="
                          $(SolutionDir)6_Ideation/**/obj/**/*.cs;
                          $(SolutionDir)6_Ideation/**/bin/**/*.cs;
                          $(SolutionDir)6_Ideation/**/*sample/**/*.cs;
                          $(SolutionDir)6_Ideation/**/*test/**/*.cs; $(SolutionDir)6_Ideation/**/Resources.Designer.cs"
                 Link="Aspect/$([System.String]::Copy('%(RecursiveDir)').Replace('src',''))%(Filename)%(Extension)"/>

        <Compile Condition="
        $(ProjectDir.Contains('5_Declaration'))"
                 Include="
                        $(SolutionDir)6_Ideation/**/*.cs;"
                 Exclude="
                          $(SolutionDir)6_Ideation/**/obj/**/*.cs;
                          $(SolutionDir)6_Ideation/**/bin/**/*.cs;
                          $(SolutionDir)6_Ideation/**/*sample/**/*.cs;
                          $(SolutionDir)6_Ideation/**/*test/**/*.cs;  $(SolutionDir)6_Ideation/**/Resources.Designer.cs"
                 Link="$([System.String]::Copy('%(RecursiveDir)').Replace('src',''))%(Filename)%(Extension)"/>

        <InternalsVisibleTo Include="$(AssemblyName).Test"/>
        
        <EmbeddedResource Condition="$(IsARM) != true" Remove="$(SolutionDir)/**/Properties/**/*ARM.resx"/>
        <Compile Condition="$(IsARM) != true" Remove="$(SolutionDir)/**/Properties/**/*ARM.Designer.cs"/>

        <EmbeddedResource Condition="$(IsARM64) != true" Remove="$(SolutionDir)/**/Properties/**/*ARM64.resx"/>
        <Compile Condition="$(IsARM64) != true" Remove="$(SolutionDir)/**/Properties/**/*ARM64.Designer.cs"/>

        <EmbeddedResource Condition="$(IsX64) != true" Remove="$(SolutionDir)/**/Properties/**/*X64.resx"/>
        <Compile Condition="$(IsX64) != true" Remove="$(SolutionDir)/**/Properties/**/*X64.Designer.cs"/>

        <EmbeddedResource Condition="$(IsX86) != true" Remove="$(SolutionDir)/**/Properties/**/*X86.resx"/>
        <Compile Condition="$(IsX86) != true" Remove="$(SolutionDir)/**/Properties/**/*X86.Designer.cs"/>

        <EmbeddedResource Condition="$(IsOSX) != true" Remove="$(SolutionDir)/**/Properties/**/*Osx*.resx"/>
        <Compile Condition="$(IsOSX) != true" Remove="$(SolutionDir)/**/Properties/**/*Osx*.Designer.cs"/>

        <EmbeddedResource Condition="$(IsWindows) != true" Remove="$(SolutionDir)/**/Properties/**/*Windows*.resx"/>
        <Compile Condition="$(IsWindows) != true" Remove="$(SolutionDir)/**/Properties/**/*Windows*.Designer.cs"/>

        <EmbeddedResource Condition="$(IsLinux) != true" Remove="$(SolutionDir)/**/Properties/**/*Linux*.resx"/>
        <Compile Condition="$(IsLinux) != true" Remove="$(SolutionDir)/**/Properties/**/*Linux*.Designer.cs"/>
    </ItemGroup>
    
    <ItemGroup>

        <!-- Graphic -->
        <Compile Condition="'$(GraphicBackend)' == 'SFML'"
                 Remove="
            $(SolutionDir)4_Operation/**/*Graphic*/**/SDL/**; 
            $(SolutionDir)4_Operation/**/*Graphic*/**/OpenGL/**;
            $(SolutionDir)4_Operation/**/*Graphic*/**/Properties/**/*SDL.Designer.cs;"/>
        <EmbeddedResource
            Condition="'$(GraphicBackend)' == 'SFML'"
            Remove="$(SolutionDir)4_Operation/**/*Graphic*/**/Properties/**/*SDL*.resx" />

        <Compile Condition="'$(GraphicBackend)' == 'SDL'"
                 Remove="
            $(SolutionDir)4_Operation/**/*Graphic*/**/SFML/**;
            $(SolutionDir)4_Operation/**/*Graphic*/**/Properties/**/*SFML*.Designer.cs" />
        <EmbeddedResource
            Condition="'$(GraphicBackend)' == 'SDL'"
            Remove="$(SolutionDir)4_Operation/**/*Graphic*/**/Properties/**/*SFML*.resx" />
        
        <!-- audio -->
        <Compile Condition="'$(AudioBackend)' == 'SFML'"
                 Remove="
            $(SolutionDir)4_Operation/**/*Audio*/**/SDL/**; 
            $(SolutionDir)4_Operation/**/*Audio*/**/OpenGL/**;
            $(SolutionDir)4_Operation/**/*Audio*/**/Properties/**/*SDL.Designer.cs;"/>
        <EmbeddedResource
            Condition="'$(AudioBackend)' == 'SFML'"
            Remove="$(SolutionDir)4_Operation/**/*Audio*/**/Properties/**/*SDL*.resx" />

        <Compile Condition="'$(AudioBackend)' == 'SDL'"
                 Remove="
            $(SolutionDir)4_Operation/**/*Audio*/**/SFML/**;
            $(SolutionDir)4_Operation/**/*Audio*/**/Properties/**/*SFML*.Designer.cs" />
        <EmbeddedResource
            Condition="'$(AudioBackend)' == 'SDL'"
            Remove="$(SolutionDir)4_Operation/**/*Audio*/**/Properties/**/*SFML*.resx" />

    </ItemGroup>

    <ItemGroup Condition="$(AssemblyName.Contains('Test'))">
        <ProjectReference Include="$(ProjectDir)/../src/$([System.Text.RegularExpressions.Regex]::Replace('$(AssemblyName)', '.Test', '')).csproj"/>
    </ItemGroup>

    <ItemGroup Condition="$(AssemblyName.Contains('Benchmark'))">
        <ProjectReference Include="$(ProjectDir)/../src/$([System.Text.RegularExpressions.Regex]::Replace('$(AssemblyName)', '.Benchmark', '')).csproj"/>
    </ItemGroup>

    <PropertyGroup Condition="$(AssemblyName.Contains('Sample'))">
        <NameTest>$([System.Text.RegularExpressions.Regex]::Replace('$(AssemblyName)', '.[^.]*Sample[^*]*', ''))</NameTest>
    </PropertyGroup>

    <ItemGroup Condition="$(AssemblyName.Contains('Sample'))">
        <ProjectReference
            Condition="Exists('$(ProjectDir)/../src/$(NameTest).csproj') == True"
            Include="$(ProjectDir)/../src/$(NameTest).csproj"/>
        <ProjectReference
            Condition="Exists('$(ProjectDir)/../src/$(NameTest).csproj') == False"
            Include="$(ProjectDir)/../../src/$(NameTest).csproj"/>
    </ItemGroup>

    <ItemGroup>
        <None Condition="Exists('$(ProjectDir)/Assets/') == True"
              Update="$(ProjectDir)/Assets/**"
              LinkBase="Assets/"
              CopyToOutputDirectory="Always"
              CopyToPublishDirectory="Always"/>
    </ItemGroup>
</Project>